{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "paths": {
      "@automation/*": ["./src/automation/*"],
    }
  },
  "include": ["/**/*.ts"],
  "exclude": [
    "node_modules/@types/glob/index.d.ts"
  ]
}
